{
  "name": "Simple Assistant",
  "version": "1.2",
  "description": "Automate some aspects of SimpleMMO",
  "manifest_version": 2,
  "icons": {
    "128": "static/icon-128.png",
    "48": "static/icon-48.png",
    "16": "static/icon-16.png"
  },
  "page_action": {
    "default_icon": "static/icon-16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://web.simple-mmo.com/gamecentre/5050"
  ],
  "background": {
    "scripts": ["assets/eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://web.simple-mmo.com/*"
      ],
      "js": ["assets/lib/jquery.js", "assets/content.js"]
    }
  ]
}