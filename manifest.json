{
  "name": "SimpleGambler",
  "version": "1.0",
  "description": "Automatically make 50/50 bets in SMMO gambling hall",
  "manifest_version": 2,
  "icons": {
    "128": "static/icon-128.png",
    "48": "static/icon-48.png",
    "16": "static/icon-16.png"
  },
  "page_action": {
    "default_icon": "static/icon-16.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "https://web.simple-mmo.com/gamecentre/5050"
  ],
  "background": {
    "scripts": ["assets/eventPage.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://web.simple-mmo.com/gamecentre/5050"],
      "js": ["assets/jquery.js", "assets/content.js"]
    }
  ]
}